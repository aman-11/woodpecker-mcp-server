    "dotenv": "^16.5.0",
    "googleapis": "^150.0.1",
    "js-base64": "^3.7.7",
    "mcp-framework": "^0.2.2"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/aman-11/woodpecker-mcp-server/"
  },
  "devDependencies": {
    "@types/node": "^20.11.24",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.19.0"
  }
}
