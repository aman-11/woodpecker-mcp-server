{
  "name": "woodpecker-ci-mcp",
  "version": "1.0.0",
  "description": "A server to interact with Woodpecker CI.",
  "author": "aayushaman72@gmail.com",
  "type": "module",
  "bin": {
    "woodpecker-ci-mcp": "./dist/index.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "debug": "npx @modelcontextprotocol/inspector node dist/index.js",
    "kill-debug": "kill -9 $(lsof -ti:6277) && kill -9 $(lsof -ti:6274)",
    "build": "tsc && mcp-build",
    "watch": "tsc --watch",
    "start": "node dist/index.js"
  },
  "keywords": [
    "mcp",
    "modelcontextprotocol",
    "server",
    "ci",
    "cd",
    "woodpecker ci",
    "claude"
  ],
